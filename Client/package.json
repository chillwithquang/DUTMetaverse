{
  "name": "DUT-Metaverse",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "start": "npm run start:dev",
    "build": "craco build",
    "start:dev": "craco start",
    "start:prod": "npm run build && npm run preview",
    "start:app": "cross-env ELECTRON_DEBUG=true electron dist/main.js",
    "build:mac": "rimraf build && parcel build src/main.ts src/index.html --no-minify --public-url ./ -d dist --out-file=main --target=electron && electron-builder",
    "deploy": "npm run build && firebase deploy",
    "watch": "rimraf build && parcel watch src/main.ts src/index.html --public-url ./ -d build --out-file=main --target=electron",
    "lint": "eslint ./src --ext .js,.jsx,.ts,.tsx"
  },
  "author": "Quang HUYNH",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@colyseus/schema": "^1.0.34",
    "@types/crypto-js": "^4.1.1",
    "@types/node": "^17.0.24",
    "@types/react": "^18.0.5",
    "@types/react-dom": "^18.0.1",
    "@types/webrtc": "^0.0.31",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "@vitejs/plugin-react": "^1.3.1",
    "babel-plugin-module-resolver": "^4.1.0",
    "cross-env": "^7.0.3",
    "cssnano": "^5.1.5",
    "electron": "^17.2.0",
    "electron-builder": "^23.0.2",
    "electron-reload": "^2.0.0-alpha.1",
    "eslint": "^8.13.0",
    "minimist": ">=1.2.2",
    "postcss": "^8.2.15",
    "prettier": "^2.6.2",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@chakra-ui/react": "^1.8.8",
    "@craco/craco": "^6.4.3",
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "@reduxjs/toolkit": "^1.8.1",
    "@types/react-slick": "^0.23.8",
    "colyseus.js": "^0.14.13",
    "crypto-js": "^4.1.1",
    "encrypt-storage": "^2.2.6",
    "framer-motion": "^6.3.0",
    "immer": "^9.0.12",
    "lodash": "^4.17.21",
    "peerjs": "^1.3.2",
    "phaser": "^3.55.2",
    "query-string": "^7.1.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-facebook-login": "^4.1.1",
    "react-icons": "^4.3.1",
    "react-redux": "^8.0.1",
    "react-router-dom": "^6.3.0",
    "react-scripts": "^5.0.1",
    "react-slick": "^0.29.0",
    "redux": "^4.2.0",
    "regenerator-runtime": "^0.13.9",
    "tslib": "^2.3.1",
    "vite": "^2.9.5",
    "web-vitals": "^2.1.4",
    "ws": "^8.5.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "staticFiles": {
    "staticPath": "public",
    "watcherGlob": "**"
  },
  "build": {
    "appId": "parcel.electron",
    "mac": {
      "category": "your.app.category.type",
      "entitlements": "entitlements.mac.plist",
      "hardenedRuntime": true,
      "extendInfo": {
        "NSMicrophoneUsageDescription": "Please give us access to your microphone",
        "NSCameraUsageDescription": "Please give us access to your camera"
      }
    },
    "files": [
      "dist/*"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
