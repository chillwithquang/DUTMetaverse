{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "strict": true,
    "noImplicitAny": false,
    "noEmit": true,
    "allowJs": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "importHelpers": true,
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@tlq/*": ["src/*"]
    },
    "typeRoots": ["node_modules/@types", "node_module/phaser/types"],
    "types": ["phaser", "vite/client", "node"]
  },
  "include": ["src/**/*"]
}
